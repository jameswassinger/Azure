{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "routeTable_Name": {
            "defaultValue": "rt-net",
            "type": "String"
        },

        "routeTable_Firewall_NextHop_Ip": {
            "defaultValue": "0.0.0.0",
            "type": "string"
        }, 

        "routeTable_Firewall_RouteName": {
            "defaultValue": "UDR-FIREWALL-INTERNAL",
            "type": "string"
        },

        "routeTable_Firewall_AddressPrefix": {
            "defaultValue": "0.0.0.0/0",
            "type": "string"
        },

        "routeTable_Peered_Vnet_RouteName": {
            "defaultValue": "UDR-VNET-PEER",
            "type": "string"
        },

        "routeTable_Peered_Vnet_AddressPrefix" : {
            "defaultValue": "0.0.0.0/0",
            "type": "string"
        },

        "routeTable_Self_Vnet_RouteName": {
            "defaultValue": "UDR-VNET",
            "type": "string"
        },

        "routeTable_Self_Vnet_AddressPrefix": {
            "defaultValue": "0.0.0.0/0",
            "type": "string"
        },

        "routeTable_Self_Vnet_Subnet1_RouteName": {
            "defaultValue": "UDR-SUBNET1-TO-SELF",
            "type": "string"
        },

        "routeTable_Self_Vnet_Subnet1_AddressPrefix": {
            "defaultValue": "0.0.0.0/0",
            "type": "string"
        },

        "routeTable_Self_Vnet_Subnet2_RouteName": {
            "defaultValue": "UDR-SUBNET2-TO-SELF",
            "type": "string"
        },

        "routeTable_Self_Vnet_Subnet2_AddressPrefix": {
            "defaultValue": "0.0.0.0/0",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-11-01",
            "name": "[parameters('routeTable_Name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableBgpRoutePropagation": true,
                "routes": [
                    {
                        "name": "UDR-Default",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                            "hasBgpOverride": false
                        }
                    },
                    {
                        "name": "[parameters('routeTable_Firewall_RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('routeTable_Firewall_AddressPrefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                            "hasBgpOverride": false
                        }
                    },
                    {
                        "name": "[parameters('routeTable_Peered_Vnet_RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('routeTable_Peered_Vnet_AddressPrefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                            "hasBgpOverride": false
                        }
                    },
                    {
                        "name": "[parameters('routeTable_Self_Vnet_RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('routeTable_Self_Vnet_AddressPrefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                            "hasBgpOverride": false
                        }
                    },
                    {
                        "name": "[parameters('routeTable_Self_Vnet_Subnet1_RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('routeTable_Self_Vnet_Subnet1_AddressPrefix')]",
                            "nextHopType": "VnetLocal",
                            "hasBgpOverride": false
                        }
                    },
                    {
                        "name": "[parameters('routeTable_Self_Vnet_Subnet2_RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('routeTable_Self_Vnet_Subnet2_AddressPrefix')]",
                            "nextHopType": "VnetLocal",
                            "hasBgpOverride": false
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), '/UDR-Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "0.0.0.0/0",
                "nextHopType": "VirtualAppliance",
                "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                "hasBgpOverride": false
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), concat('/',parameters('routeTable_Firewall_RouteName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('routeTable_Firewall_AddressPrefix')]",
                "nextHopType": "VirtualAppliance",
                "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                "hasBgpOverride": false
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), concat('/',parameters('routeTable_Self_Vnet_Subnet1_RouteName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('routeTable_Self_Vnet_Subnet1_AddressPrefix')]",
                "nextHopType": "VnetLocal",
                "hasBgpOverride": false
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), concat('/', parameters('routeTable_Self_Vnet_Subnet2_RouteName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('routeTable_Self_Vnet_Subnet2_AddressPrefix')]",
                "nextHopType": "VnetLocal",
                "hasBgpOverride": false
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), concat('/',parameters('routeTable_Self_Vnet_RouteName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('routeTable_Self_Vnet_AddressPrefix')]",
                "nextHopType": "VirtualAppliance",
                "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                "hasBgpOverride": false
            }
        },
        {
            "type": "Microsoft.Network/routeTables/routes",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('routeTable_Name'), concat('/',parameters('routeTable_Peered_Vnet_RouteName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', parameters('routeTable_Name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('routeTable_Peered_Vnet_AddressPrefix')]",
                "nextHopType": "VirtualAppliance",
                "nextHopIpAddress": "[parameters('routeTable_Firewall_NextHop_Ip')]",
                "hasBgpOverride": false
            }
        }
    ]
}